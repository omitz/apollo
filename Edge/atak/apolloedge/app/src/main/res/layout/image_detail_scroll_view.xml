<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_apollo"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imgDetailImg"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/imgDetailTextHeader"
            android:layout_centerHorizontal="true"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:layout_below="@+id/imgDetailImg"/>

        <TableLayout
            android:id="@+id/imgDetailTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/imgDetailTextHeader" >

            <TableRow>
                <TextView
                    android:text="Lat: "
                    android:textSize="16dp"
                    android:textColor="@color/medium_gray" />
                <TextView
                    android:id="@+id/latValue"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/off_white" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Long: "
                    android:textSize="16dp"
                    android:textColor="@color/medium_gray" />
                <TextView
                    android:id="@+id/longValue"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/off_white" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Date: "
                    android:textSize="16dp"
                    android:textColor="@color/medium_gray" />
                <TextView
                    android:id="@+id/dateValue"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/off_white" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Time: "
                    android:textSize="16dp"
                    android:textColor="@color/medium_gray" />

                <TextView
                    android:id="@+id/timeValue"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/off_white" />
            </TableRow>

        </TableLayout>

        <ImageButton
            android:id="@+id/leftArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_chevron_left_80"
            android:background="@null" />

        <ImageButton
            android:id="@+id/rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_chevron_right_80"
            android:background="@null" />

    </RelativeLayout>



</ScrollView>
