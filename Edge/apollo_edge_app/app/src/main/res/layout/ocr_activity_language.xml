<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_language_arabic"
        android:textSize="20sp" />

    <Button
        android:id="@+id/eng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ara"
        android:text="@string/set_language_english"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eng"
        android:text="@string/set_language_french"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fra"
        android:text="@string/set_language_russian"
        android:textSize="20sp" />

</RelativeLayout>